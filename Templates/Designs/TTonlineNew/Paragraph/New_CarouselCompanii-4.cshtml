@Include("../Custom/GlobalVariables.cshtml")
@Include("../Includes/GetImage_new.cshtml")
@Include("../Includes/New_PlaceholderHelpers.cshtml")
<style>
  .owl-carousel .owl-item img {width:auto!important;}
</style>

@{
	var pageId = GetPageIdByNavigationTag("CompaniesFeed");
	var companiesIDs = "";
	foreach (LoopItem i in GetLoop("Item.Lista_Companii"))
	{
	    companiesIDs += i.GetString("Item.Lista_Companii.Companie") + ",";
	}
}
<div class="col-md-12 companii-background">
    <h3 class="block-title">
        <span>@Translate("industry_directory","Industry Directory")</span>
    </h3>
    <h4><span class="tipcompanie-homepage-tag tipcompanie4">@GetString("Item.Titlu")</span></h4>
    <div class="carousel-companii caruselMarginBottom">
        <div class="owl-carousel owl-companii-1 owl-theme handlebars-wrapper" data-template="CarouselCompanii1Template" data-slides-number="4" data-json-feed="/Default.aspx?ID=@pageId&CompanieID=@companiesIDs">
            @RenderPlaceholderCaruselText()
         </div>
    </div>
</div>
<script id="CarouselCompanii1Template" type="text/x-handlebars-template">
    {{#each CompanyContainer}}
    <div class="item col-companie">
        <article class="news-block small-block">
            <figure class="image-overlay-addon companii-logo-figure">
                <img src="/Admin/Public/GetImage.ashx?Image={{itemLogo}}&AlternativeImage=/Files/Images/Articole/download (1).png&Crop=5&Format=jpg&Width=255&Height=168"/>
            </figure>
            <header class="news-details">
                <h3 class="news-title">
                    <a href="{{itemLink}}"><span>{{itemName}}</span></a></h3>
                <p class="companie-numar-produse">{{itemProdNumber}}</p>
            </header>
        </article>
    </div>
    {{/each}}
</script>
