  window.translation = {
    common: {
      selectedList: '{quantity} list selected',
      selectedLists: '{quantity} lists selected'
    }
  };

  var AUTOHIDE = Boolean(0);
  
  document.addEventListener("scroll", function (e) {
      var newsletterSignUp = $('#NewsletterSignUp');
      
      var successMessage = $('#success-message.sib-form-message-panel--active').length;
      var modalHidden = $('.hideModal').length;      
      
      if(modalHidden == 0) {
          if(successMessage == 0) {
             if (window.pageYOffset > 600) {
               newsletterSignUp.removeClass("popUpHide");
             } else {
                   newsletterSignUp.addClass("popUpHide");
             }  
          }          
      }
  });
  $( document ).ready(function() {
    
    $('.next-btn').on('click', function() { 
        var emailForm = $('.first-step #EMAIL').val();
        var firstName = $('.first-step #FIRSTNAME').val();
        var emailError = $( ".first-step .emailError" );
        var firstNameError = $( ".first-step .firstError" );
         
        if(emailForm != '' ) {
            if(firstName != '') {
                $('.first-step').removeClass('open');
                $('.second-step').addClass('open');
            } else {
                $(firstNameError).css("display", "block");
                $(firstNameError).text("Acest câmp este obligatoriu.");
            }
        } else {
            $(emailError).css("display", "block");
            $(emailError).text("Acest câmp este obligatoriu.");
            if(firstName == '') {
               $(firstNameError).css("display", "block");               
               $(firstNameError).text("Acest câmp este obligatoriu.");
            }
        }        
    });
    $('#NewsletterSignUp .exit-modal').on('click', function() {  
        $('#NewsletterSignUp').addClass("hideModal");
    });
  });
</script>
