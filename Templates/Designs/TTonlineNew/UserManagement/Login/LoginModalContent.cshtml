<div class="row">
<div class="col-xs-12">
<div class="account-content">
  @if(!string.IsNullOrEmpty(GetString("DW_extranet_error_uk"))){
      <div class="error" id="errors"><i class="fa fa-exclamation-triangle"></i>@Translate("Datele introduse nu sunt valide.","Datele introduse nu sunt valide.")</div>
  }
  <form id="login" name="ExtUserForm" method="post" action='@GetString("DWExtranetAction")'>
    <input type="hidden" name="ID" value='@Pageview.Page.ID'>
    <input type="hidden" name="DWExtranetUsernameRemember" value="True">
    <input type="hidden" name="DWExtranetPasswordRemember" value="True">
     @if(!string.IsNullOrEmpty(GetString("UserManagement:User.Login.SuccessRedirectToPage"))){
      <input type="hidden" name="Redirect" value='@GetValue("UserManagement:User.Login.SuccessRedirectToPage")' />
    }
    <div class="form-group">
      <label class="col-sm-3 control-label">@Translate("username", "Utilizator")</label>
      <div class="col-sm-9">
        <input type="text" name="username" class="form-control" style="border:#000000 1px solid" value='@(GetValue("Server:Request.username") != null ? GetValue("Server:Request.username") : "")' autocomplete="off" />
      </div>      
    </div>
    <div class="form-group">
      <label class="control-label col-sm-3">@Translate("password", "Password")</label>
      <div class="col-sm-9">
        <input type="password" name="password" class="form-control" style="border:#000000 1px solid"  value='@(GetValue("Server:Request.password") != null ? GetValue("Server:Request.password") : "")' autocomplete="off" />
      </div>      
    </div>
    <div class="form-group">
      <div class="row text-center">
      <div class="col-xs-4">
        <input type="submit" class="btn btn-primary" value='@Translate("Autentificare", "Autentificare")'/>
      </div>
      <div class="col-xs-4">
        <a href="/Default.aspx?ID=4255" class="btn btn-primary">@Translate("create new user", "Creeaza cont")</a>
      </div>
        <div class="col-xs-4">
          <a href="/Default.aspx?id=@GetGlobalValue("Global:Page.ID")&amp;LoginAction=Recovery" class="reset-password btn btn-primary ">@Translate("forgotPassword", "Resetare parola")</a>
        </div>
      </div>
    </div>
  </form>
</div>      
</div> 
