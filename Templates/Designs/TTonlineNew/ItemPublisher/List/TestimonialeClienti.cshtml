@using Dynamicweb.Frontend
@* @Include("GlobalVariables.cshtml") *@
@*Include("../Includes/ArticleHelper.cshtml")*@
@*<p>Total articole: @GetInteger("Items.TotalCount")</p>*@

@if(testimoniale.Any()){
    	foreach(LoopItem item in testimoniale){
        

        string Nume = item.GetString("Item.Testimoniale.Name.Value");
        string Imagine = item.GetString("Item.Testimoniale.Image.Value");
        string articleExcerpt = item.GetString("Item.Testimoniale.Sumar");
                   

           
            
            <div class="col-xs-12 col-md-4 col-sm-4 col-lg-4">
                <div class="color1">
                    <div class="col-xs-12 col-md-5 col-sm-5 col-lg-5 reset-padding-right">
                       @if(!string.IsNullOrEmpty(item.GetString("Item.Testimoniale.Image.Value"))){
                                     <img class="img-responsive" src='@Imagine' width="210" height="230" alt="" style="max-height:230px;" />
                                  }  else{
                                     <img class="img-responsive" src="http://placehold.it/300/300" height="100" alt="" />
                                  }                    
                        <h2>@Nume</h2>
                    </div>
                    <div class="col-xs-12 col-md-7 col-sm-7 col-lg-7">
                        <p style="font-size:12px;">@articleExcerpt</p>
                    </div>
                </div>
            </div>
     
   
  	}
   } 