<script id="ArticleBodyTemplate" type="text/x-handlebars-template">
{{#ArticlesContainer}}
		{{#each Article}}
       <header class="post-header">
          <h1 class="post-title">
            {{itemTitlu}}
          </h1><!-- .post-title -->    
          <a href='/Default.aspx?ID={{itemSectiuneParinteId}}' class="category bg{{itemSectiuneParinteId}}">
           {{itemSectiuneParinte}}
          </a>
       
          <p class="simple-share">
          <span class="m-0">@Translate("articolde","de")
            {{#foreach articleAutori}}
                {{#if $last}} 
                  <a href="{{Link}}">{{Name}}</a>
                {{else}}
                   <a href="{{Link}}">{{Name}},</a>
                {{/if}}
            {{/foreach}}      
            </span>
            <span><span class="article-date"><i class="fa fa-clock-o"></i> {{itemData}}</span></span>
            {{#if showItemVisits}}
                 <span><i class="fa fa-eye"></i> {{itemVisits}} vizualizari</span>
            {{/if}}
          </p>
         {{#ifCond itemImaginePrincipala "!==" ""}}
            <figure class="image-overlay">                     
              <img src="/Admin/Public/GetImage.ashx?Image={{itemImaginePrincipala}}&Crop=5&Format=jpg&Width=730&Height=355" alt="{{itemTitlu}}">          
            </figure>
         {{/ifCond}}
       </header><!-- .post-header -->
        <div class="post-content clearfix"> 
          {{{itemContinut}}}
          <hr/>

          <!-- Banner articol -->
          {{#ifCond pdf "!==" "" }}
          <div class="row">
              <div class="col-xs-12 col-pdf">
                  <a href='{{pdf}}'>PDF</a>
              </div>  
          </div>
          {{/ifCond}}
          <!-- End Banner Articol -->
          <div class="row text-center mb-20">
           {{#if cereOferta}}
            @RenderCereOfertaButton()
           {{/if}} 
          </div>
        </div><!-- .post-content -->
         <footer class="post-meta">  
            <div class=" clearfix">
              <div class="share-buttons">                
                <!-- Go to www.addthis.com/dashboard to customize your tools --> 
                <div class="addthis_inline_share_toolbox"></div>              
              </div> 
              <div class="author-section" data-template="AuthorsTemplate" data-json-feed="Default.aspx?ID=@autorPageID&Autor=">
              </div>                              
            </div>             
                           
          </footer>
          
    {{/each}}
{{/ArticlesContainer}}              
</script>
