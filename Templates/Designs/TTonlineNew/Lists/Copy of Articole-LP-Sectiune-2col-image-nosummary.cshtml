
<div class="col-xs-12 col-sm-12 col-md-6">
    <article class="news-block small-block" style="margin-bottom: 110px;">
        <a href="@articleLink" class="overlay-link">
          <figure class="">
            @if(!String.IsNullOrEmpty(articleImageRaw)){
            <img src="@articleImage" />
            }else{
            <img src="/Files/Images/NoImage/350x230.png" /> 
            }
          <!--  <img src="/Admin/Public/GetImage.ashx?Image=@articleImage&altFmImage_path=/Files/Images/NoImage/255x168.png&Format=jpg&Width=250&Height=150&Crop=5" alt="@articleTitle" class="img-responsive" /> -->
          </figure>
        </a>

      
        <header class="news-details">
          <h3 class="news-title"><a href="@articleLink">@articleTitle</a></h3> 
          <p class="simple-share">
            @if(articleAutori.Any()){
                @Translate("articolde","de")
                foreach (var articleAutor in articleAutori)
                {        
                    if(counterAutor3 == 1){
                        <span style="margin:0px!important;"><a href="@articleAutor.Link">@articleAutor.Name</a></span>
                    } else {
                        <span style="margin:0px!important;">, <a href="@articleAutor.Link">@articleAutor.Name</a></span>
                    } 
                    counterAutor3++;
                }
                <span style="margin: 0 !important;">-</span>
            }
            <span><i class="fa fa-clock-o"></i> @articleDate.ToString("D")</span>
            @if (itemConditionVisits) {    
              <span><i class="fa fa-eye"></i> @articleVisits vizualizari</span>
            } 
          </p>
        </header>

    </article><!-- News block --> 
</div>