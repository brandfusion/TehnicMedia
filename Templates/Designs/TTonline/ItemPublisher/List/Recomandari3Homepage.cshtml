      string image = !string.IsNullOrEmpty(itemImage) ? itemImage : defaultImage;
      string itemExcerpt = item.GetString("ItemPublisher:Item.Sumar");
      string itemVisits = item.GetString("ItemPublisher:Item.Visits.Value");



   
          
          <div class="col-md-6">
