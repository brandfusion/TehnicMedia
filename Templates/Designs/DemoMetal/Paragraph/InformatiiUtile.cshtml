@{
	string title = GetString("Item.ParagraphName");
	string image = GetString("Item.BackgroundImage");
	string iconTitle = GetString("Item.Icon");
	string subtitle = GetString("Item.Subtitle");
}

<div class="jx-container informatii">
	<div class="sixteen columns jx-section-title-1 mb40 ">
		<div class="jx-pre-title">
			<div class="jx-title-border left" style="background: #000;"></div>
			<div class="jx-title-icon"><i class="line-icon @iconTitle" style="color: #000 !important"></i></div>
			<div class="jx-title-border right" style="background: #000;"></div> 
		</div>
		<div class="jx-title" style="color: #000;">@title</div>
		<div class="subtitle">@subtitle</div>
	</div>

	<div class="container">
	@foreach(LoopItem item in GetLoop("Item.LinkList")) {
		string link = item.GetString("Item.LinkList.Link");
		string text = item.GetString("Item.LinkList.Text");
		string icon = item.GetString("Item.LinkList.Icon");
		string description = item.GetString("Item.LinkList.Description");

		<div class="eight columns informatii-link">
			<div class="@icon">@text</div>
			<div>@description</div>
		</div>			
	}
	</div>

</div>